    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug",
            "url": "http://localhost:1234",
            "webRoot": "${workspaceFolder}/src",
            "breakOnLoad": true,
            "pathMapping": {
                "__parcel_source_root": "${workspaceFolder}"
            },
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**/.*.js"
            ]
        }
    ]
}